<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>jsp_ch01_day02</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>saram-list</servlet-name>
		<servlet-class>org.comstudy21.saram.controller.ListController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>saram-list</servlet-name>
		<url-pattern>/list.saram</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>saram-input</servlet-name>
		<servlet-class>org.comstudy21.saram.controller.InputController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>saram-input</servlet-name>
		<url-pattern>/input.saram</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>saram-detail</servlet-name>
		<servlet-class>org.comstudy21.saram.controller.DetailController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>saram-detail</servlet-name>
		<url-pattern>/detail.saram</url-pattern>
	</servlet-mapping>
	
	<!-- 수정 -->
	<servlet>
		<servlet-name>saram-modify</servlet-name>
		<servlet-class>org.comstudy21.saram.controller.ModifyController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>saram-modify</servlet-name>
		<url-pattern>/modify.saram</url-pattern>
	</servlet-mapping>
	
	<!-- 삭제 -->
	<servlet>
		<servlet-name>saram-delete</servlet-name>
		<servlet-class>org.comstudy21.saram.controller.DeleteController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>saram-delete</servlet-name>
		<url-pattern>/delete.saram</url-pattern>
	</servlet-mapping>
</web-app>